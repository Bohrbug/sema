{
  "name": "sema",
  "author": "Francisco Bernardo <f.bernardo@sussex.ac.uk> (http://frantic0.com)",
  "contributors": [
    "Chris Kiefer <c.kiefer@sussex.ac.uk> (http://luuma.net)",
    "Thor Magnusson <t.magnusson@sussex.ac.uk> (http://www.ixi-audio.net)"
  ],
  "version": "0.5.0",
  "description": "Sema, a live coding language design and performance playground",
  "scripts": {
    "build": "routify -bd --pages ./client/routes/ && rollup -c",
    "dev": "run-p routify rollup",
    "rollup": "rollup -c -w",
    "routify": "routify -d --pages ./client/routes/",
    "test": "mocha --opts mocha.opts",
    "export": "routify export",
    "prebuild": "routify --single-build --pages ./client/routes/",
    "serve": "spassr --debug --serve-spa --spa-port 5001 --dist-dir ./public --app ./bundle.js --entrypoint ./index.html"
  },
  "dependencies": {
    "firebase": "^7.14.1",
    "firebaseui": "^4.5.0",
    "futil": "^1.67.0",
    "github-base": "^1.0.0",
    "lodash": "^4.17.15",
    "lodash.clonedeep": "^4.5.0",
    "lodash.map": "^4.6.0",
    "marked": "^0.8.2",
    "nearley": "^2.19.0",
    "rxfire": "^3.12.2",
    "rxjs": "^6.5.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@sveltech/routify": "^1.5.4",
    "cross-env": "^5.2.0",
    "del": "^5.1.0",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.26.3",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-copy-assets": "^2.0.1",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-url": "^3.0.0",
    "rollup-plugin-web-worker-loader": "^1.2.2",
    "serve": "^11.0.0",
    "spassr": "^1.0.2",
    "svelte": "3.15.0",
    "svelte-codemirror": "https://github.com/mimic-sussex/svelte-codemirror.git",
    "svelte-grid": "^1.10.5",
    "svelte-inspect": "^0.1.2",
    "svelte-loader": "2.13.3"
  }
}
